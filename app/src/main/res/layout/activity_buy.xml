<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuyActivity"
    android:background="@drawable/gradient_background"

    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginBottom="100dp"
        app:srcCompat="@drawable/logo2" />

    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <TableLayout
            android:layout_marginTop="20dp"
            android:layout_width="400dp"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="400dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/Prod1Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Chips"
                    android:textAlignment="textStart"
                    android:textColor="@color/c12"
                    android:textSize="36sp"/>
                <EditText
                    android:id="@+id/number"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/g2"
                    android:padding="8dp"
                    android:hint="Amount"/>


            </TableRow>

            <TableRow
                android:layout_width="400dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/Prod2Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Juice"
                    android:textAlignment="textStart"
                    android:textColor="@color/c12"
                    android:textSize="36sp" />

                <EditText
                    android:id="@+id/number2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/g2"
                    android:padding="8dp"
                    android:hint="Amount"/>

            </TableRow>

            <TableRow
                android:layout_width="400dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/Prod3Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. Tea"
                    android:textAlignment="textStart"
                    android:textColor="@color/c12"
                    android:textSize="36sp"/>
                <EditText
                    android:id="@+id/number3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/g2"
                    android:padding="8dp"
                    android:hint="Amount"/>

            </TableRow>

            <TableRow
                android:layout_width="400dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/Prod4Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4. Chocolate"
                    android:textAlignment="textStart"
                    android:textColor="@color/c12"
                    android:textSize="36sp"/>
                <EditText
                    android:id="@+id/number4"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/g2"
                    android:padding="8dp"
                    android:hint="Amount"/>

            </TableRow>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/AddButton"
                android:text="Buy"
                android:textSize="28sp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/c12"
                app:cornerRadius="20dp"/>
            <Button
                android:id="@+id/backButton1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Back"
                android:textSize="28sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/c12"
                app:cornerRadius="20dp"/>
        </TableLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>